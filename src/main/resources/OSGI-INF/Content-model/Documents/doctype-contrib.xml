			<facet name="Versionable" />
			<facet name="Commentable" />
			<prefetch>dc:title, dc:modified, uid.uid</prefetch>
		</doctype>

		<doctype name="PaymentOrder" extends="File" append="true">
			<schema name="administrative" />
			<schema name="userFile" />
