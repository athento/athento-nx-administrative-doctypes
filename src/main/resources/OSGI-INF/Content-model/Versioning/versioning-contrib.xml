<?xml version="1.0" encoding="UTF-8"?>

<component
	name="org.athento.nuxeo.athento-nx-administrative-doctypes.versioning"
	version="1.0.0">
	<require>org.nuxeo.runtime.started</require>

	<extension target="org.nuxeo.ecm.core.versioning.VersioningService"
		point="versioningRules">

		<versioningRule typeName="Expenses">
			<initialState major="0" minor="0" />
			<options lifeCycleState="*">
				<none />
				<minor default="true" />
				<major />
			</options>
		</versioningRule>

		<versioningRule typeName="Invoice">
			<initialState major="0" minor="0" />
			<options lifeCycleState="*">
				<none />
				<minor default="true" />
				<major />
			</options>
		</versioningRule>

		<versioningRule typeName="PaymentOrder">
			<initialState major="0" minor="0" />
			<options lifeCycleState="*">
				<none default="true" />
				<minor />
				<major />
			</options>
		</versioningRule>

		<versioningRule typeName="TransferRequest">
			<initialState major="0" minor="0" />
			<options lifeCycleState="*">
				<none default="true" />
				<minor />
				<major />
			</options>
		</versioningRule>

		<versioningRule typeName="TravelRequest">
			<initialState major="0" minor="0" />
			<options lifeCycleState="*">
				<none />
				<minor default="true" />
				<major />
			</options>
		</versioningRule>

		<versioningRule typeName="Opd">
			<initialState major="0" minor="0" />
			<options lifeCycleState="*">
				<none />
				<minor default="true" />
				<major />
			</options>
		</versioningRule>

	</extension>

</component>